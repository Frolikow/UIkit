.location
  display block
  width 593px
  height 272px
  background-color #e75735
  &_map
    width 100%
    height 203px
    background-color: rgba(0,0,0,0.3)
  &_menu
    width 100%
    height 69px
    display flex
    align-items center
    &_message
      color #ffffff
      font-family Lato, sans-serif
      font-size 30px
      font-weight 300
      margin-left 30px
    &_address
      width 178px
      height 69px
      display flex
      align-items center
      color #ffffff
      font-family Lato, sans-serif
      font-size 13px
      font-weight bold
      text-transform uppercase
      letter-spacing 0.63px
      margin-left 21px
      margin-right auto
    &_buttons
      margin-right 25px
      width 68px
      height 26px
      display flex
      justify-content: space-between
      align-content flex-end
      &_1
        svg
          fill #fff
          width 27px
          height 26px
      &_2
        svg
          fill #fff
          width 18px
          height 24px