@import '~style/colors.styl'

.search 
  margin auto
  width 17.9375rem
  height 1.75rem
  position relative
  
  &__input 
    border none
    width 100%
    height 100%
    padding 0.5rem 0.5rem 0.5625rem 0.9375rem
    box-sizing border-box
    border-radius 0.1875rem
    background mainGray229
    font 0.875rem "Source Sans Pro", sans-serif
    font-weight 400
    line-height 2.625rem
    letter-spacing 0.0088rem
    color mainGray85
    outline none

    &_result_none
      background-color mainRedLight
      color mainWhite

    &:focus 
      background mainGray238
      color mainGray51

  &__submit 
    border none
    position absolute
    top 0
    right 0
    width 2.0625rem
    height 1.75rem
    border-radius 0 0.1875rem 0.1875rem 0
    cursor pointer
    background-color mainRedLight
    
  &__image 
    position absolute
    top 7%
    left 90.4%
    pointer-events none

.highlight 
  background-color mainGray17
  color mainWhite
