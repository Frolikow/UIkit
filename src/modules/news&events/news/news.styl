.news
  min-width 18rem 
  height 13.25rem
  border-radius 0.25rem
  display flex
  background-color mainRedLight

  &_image[data-newsImage=bike]
    background url("./images/bike.jpeg") no-repeat 70% 50% / 400%


  &_image[data-newsImage=comaro]
    background url('./../pages/catalog/productImages/camaro1.jpeg') no-repeat 87% 50% / 330%

  &_image[data-newsImage=porshe]
    background url('./../pages/catalog/productImages/porshe1.jpeg') no-repeat 95% 50% / 330%

  &_image[data-newsImage=mustang]
    background url('./../pages/catalog/productImages/ford1.jpeg') no-repeat 87% 50% / 330%

  &_image[data-newsImage=cadilac]
    background url('./../pages/catalog/productImages/cadilac4.jpeg') no-repeat 86% 50% / 330%
    
  &_image
    width 5.9375rem
    height 13.25rem
    border-radius 0.25rem 0 0 0.25rem
    transition all 0.5s ease

    &:hover
      width 12.5rem
      background-size 150%
      background-position 85% 50%

  &_content
    width 12.0625rem 
    height 13.25rem
    color mainWhite
    display flex
    flex-direction column
    justify-content space-between 
    margin 0 0 0 1.375rem
    text-align left
    text-overflow hidden

    &_header
      margin-top 1.5rem
      font-family Lato, sans-serif
      font-size 1.75rem
      font-weight 100 
      line-height 1.75rem
      max-height 5rem
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical

    &_date
      font-family Lato, sans-serif
      font-size 0.6875rem
      font-weight bold
      line-height 0.6875rem
      text-transform uppercase
      letter-spacing 0.0344rem
      max-height 2rem

    &_text
      display inline-block
      font-family Lato-Regular, sans-serif
      font-size 0.6875rem
      line-height 0.6875rem 
      font-weight bold
      letter-spacing 0.0344rem
      margin-bottom 1.875rem
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-line-clamp 5
      -webkit-box-orient vertical