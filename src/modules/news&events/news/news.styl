.news
  width 288px 
  height 212px
  border-radius 4px
  display flex
  background-color #e75735
  float left
  margin-right 10px
  &_image
    // background-image url('/src/style/images/bike.jpeg')
    background-repeat no-repeat
    background-position 67% 60% 
    background-size 500%
    width 95px
    height 212px
    border-radius 4px 0 0 4px
  &_content
    width 193px
    height 212px
    color #ffffff
    display flex
    flex-direction column
    justify-content: space-between 
    margin 0 0 0 22px
    text-align left
    &_header
      margin-top 24px
      font-family Lato, sans-serif
      font-size 28px
      font-weight 100 
      line-height 28px
    &_date
      font-family Lato, sans-serif
      font-size 11px
      font-weight bold
      line-height 11px
      text-transform uppercase
      letter-spacing 0.55px
    &_text
      font-family Lato-Regular, sans-serif
      font-size 11px
      font-weight bold
      letter-spacing 0.55px
      margin-bottom 30px


