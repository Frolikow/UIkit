.events
  width 18rem 
  height 13.25rem
  border-radius 0.25rem
  display flex
  background-color #4eb7a8

  &_image[data-eventsImage=city]
    background url("./images/city.jpeg") no-repeat 67% 60% / 180%

  &_image[data-eventsImage=sale]
    background url("./images/sale.jpg") no-repeat 67% 50% / 300%

  &_image[data-eventsImage=square2]
    background url("./images/square2.jpg") no-repeat 75% 60% / 400%

  &_image[data-eventsImage=summer]
    background url("./images/summer.jpg") no-repeat 50% 60% / 400%

  &_image[data-eventsImage=square]
    background url("./images/square.jpg") no-repeat 67% 50% / 400%

  &_image
    width 5.9375rem
    height 13.25rem
    border-radius 0.25rem 0 0 0.25rem
    transition all 0.5s ease

    &:hover
      width 7.5rem

  &_content
    width 12.0625rem
    height 13.25rem
    color #ffffff 
    display flex
    flex-direction column
    justify-content space-between 
    margin 0 0 0 1.375rem
    text-align left 
    font-family 'Lato', sans-serif

    &_date
      display inline-block

      &_day
        display inline-block 
        font-size 4.5625rem 
        font-weight 300
        letter-spacing -0.1825rem

      &_month
        display inline-block
        margin-left 0.8125rem
        font-size 1.875rem
        font-weight 300
        text-transform lowercase

        &:first-letter
          text-transform uppercase

    &_title
      font-size 0.8125rem
      font-weight 400
      text-transform uppercase
      letter-spacing 0.0394rem

    &_text
      font-size 0.6875rem
      font-weight 400
      letter-spacing 0.0344rem

    &_button
      .stButton
        margin-bottom 1.5rem
        margin-left 0.625rem
        font-family Lato, sans-serif
        text-transform uppercase
        border none 
        border-radius 0.3125rem
        color #43ac9d
        font-size 0.625rem
        font-weight bold
        letter-spacing 0.0313rem
        outline none
        background-position center

        &_size_big
          width 8rem
          height 1.375rem 

        &_color_blue
          background-color #fff 

          &:hover
            background-color #fff
            box-shadow 0 0.1875rem 0 0 #379285 
            border solid 0.0625rem #379285

          &:active
            background-color #43ac9d
            color #fff
            box-shadow 0 0.1875rem 0 0 #379285
