.drop-down
  margin auto
  position relative
  width 17.9375rem
  height 1.75rem
  background-color transparent

  &:before
    content ""
    display block
    position absolute
    right 0
    z-index 1
    width 2.0625rem
    height 1.75rem 
    background-color mainBlueLight
    border-radius 0 0.1875rem 0.1875rem 0
    pointer-events none

  &:after
    content ""
    display block
    position absolute
    right 0.625rem
    top 0.3125rem
    width 0.625rem
    height 0.625rem
    z-index 2
    border solid 0 mainWhite
    border-width 0 0.125rem 0.125rem 0
    transform rotate(45deg)
    pointer-events none

  &__list
    font-family "Source Sans Pro", sans-serif
    width 17.9375rem
    height 1.75rem
    background-color mainGrayLight
    border none
    border-radius 0.1875rem
    color mainGrayDarken
    font-size 0.875rem
    font-weight 400
    line-height 2.625rem
    letter-spacing 0.0088rem
    position relative
    padding-left 0.625rem
    outline none
    cursor pointer
    
    &-item
      background-color mainGray229