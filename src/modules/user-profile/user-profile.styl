@import '~style/colors.styl'

.user-profile
  &__avatar
    width 5.8125rem
    height 5.8125rem
    box-shadow inset 0 0 0 0.25rem mainGray170
    border-radius 50%
    display block
    background-size 105%
    position relative
    z-index 10

    &:hover ^[0]__info
      transform scaleX(1) 
      transition all 0.5s

  &__hidden-block
    width 6.875rem
    height 5.625rem
    background-color mainBlackTranceparent

  &__info
    transform scaleX(0)
    width 10.1875rem
    height 5.625rem
    background-color mainGray229
    margin-left 6.25rem
    position relative
    border-radius 0.25rem

    &::after 
      content ""
      display block
      width 0.625rem
      height 0.625rem
      background-color mainGray229
      transform rotate(-45deg)
      position absolute
      top 2.5rem
      right 9.8125rem
      border-radius 0.1875rem 0 0 0 
      z-index 1

  &__name
    color mainRedLight
    font-size 1.125rem
    font-weight normal
    font-family Lato-Regular, sans-serif
    line-height 1.125rem
    padding-top 0.8125rem

  &__position
    color mainGray79
    font-family Lato-Black, sans-serif
    font-size 0.6875rem
    font-weight 700
    line-height 0.6875rem
    text-transform uppercase
    letter-spacing 0.0344rem
    margin-top 0.5rem

  &__social-networks 
    width 60%
    height 1.3125rem
    padding-top 0.75rem
    margin auto
    display flex
    justify-content space-around
    align-items flex-end

  &__sn-icons
    &_facebook
      background-image url('~style/images/sn-facebook-dark.svg')
      width 1.25rem
      height 1.25rem

    &_twitter
      background-image url('~style/images/sn-twitter-dark.svg')
      width 1.25rem
      height 1.1875rem

    &_dribbble
      background-image url('~style/images/sn-dribbble-dark.svg')
      width 1.3125rem
      height 1.2813rem

  &__info
    &_developer
      background-color mainBlueDark
      transform scaleX(0)
      width 10.1875rem
      height 5.625rem
      margin-left 6.25rem
      position relative
      border-radius 0.25rem

      &::after 
        content ""
        display block
        width 0.625rem
        height 0.625rem
        background-color mainBlueDark
        transform rotate(-45deg)
        position absolute
        top 2.5rem
        right 9.8125rem
        border-radius 0.1875rem 0 0 0 

      & ^[0]
        &__name
          color mainWhite
          font-size 1.125rem
          font-weight normal
          font-family Lato-Regular, sans-serif
          line-height 1.125rem
          padding-top 0.8125rem

        &__position
          color mainWhite
          font-family Lato-Black, sans-serif
          font-size 0.6875rem
          font-weight 700
          line-height 0.6875rem
          text-transform uppercase
          letter-spacing 0.0344rem
          margin-top 0.5rem

        &__social-networks
          width 60%
          height 1.3125rem
          padding-top 0.75rem
          margin auto
          display flex
          justify-content space-around
          align-items flex-end

        &__sn-icons
          &_facebook
            background-image url('~style/images/sn-facebook-light.svg')
            width 1.25rem
            height 1.25rem

          &_twitter
            background-image url('~style/images/sn-twitter-light.svg')
            width 1.25rem
            height 1.1875rem
            
          &_dribbble
            background-image url('~style/images/sn-dribbble-light.svg')
            width 1.3125rem
            height 1.2813rem