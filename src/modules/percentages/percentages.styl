@import '~style/colors.styl'

.percentages
  position relative
  width 6.25rem
  height 6.25rem
  
  &__value
    position relative
    top 1.5625rem
    color mainGray157
    font-family Lato, sans-serif
    font-size 2.5rem
    font-weight 300
    letter-spacing -0.125rem

  &__image
    position relative
    bottom 3rem
    width 6.25rem
    height 6.25rem

    &_circle 
      fill transparent
      stroke mainRedLight
      stroke-width 5