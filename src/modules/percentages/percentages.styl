@import '~style/colors.styl'

.percentages
  position relative
  width 6.25rem
  height 5rem
  
  &__value
    color mainGray157
    font-family Lato, sans-serif
    font-size 2.5rem
    font-weight 300
    line-height 2.625rem
    letter-spacing -0.125rem

  &__image
    position relative
    bottom 4.375rem
    width 6.25rem
    height 6.25rem

    &_circle 
      fill transparent
      stroke mainRedLight
      stroke-width 5