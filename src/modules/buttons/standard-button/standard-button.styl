@import '~style/colors.styl'

.standard-button
  font-family Lato, sans-serif
  text-transform uppercase
  font-weight bold
  color mainWhite
  position relative
  border-radius 0.1875rem
  border none 
  outline none
  cursor pointer
  overflow hidden
  text-align center

  &_size
    &_small 
      width 4.875rem
      height 1.375rem
      font-size 0.625rem
      letter-spacing 0.0313rem

    &_big
      width 7.375rem
      height 2rem 
      font-size 0.75rem
      letter-spacing 0.0375rem
      
    &_custom
      width 100%
      height 100%
      font-size 0.6em
      letter-spacing 0.05rem

  &_color
    &_blue
      background-color mainBlueLight 
      box-shadow 0 0.1875rem 0 0 mainBlueDark 

      &:hover
        transform translateY(0.1875rem)
        box-shadow none

      &:active
        color mainBlueLight
        background-color mainWhite
        border solid 0.0625rem mainBlueDark
        box-shadow 0 0.1875rem 0 0 mainBlueDark

      &-reverse
        color mainBlueLight
        background-color mainWhite
        border solid 0.0625rem mainBlueLight
        box-shadow 0 0.1875rem 0 0 mainBlueDark 

        &:hover
          transform translateY(0.1875rem)
          box-shadow none

        &:active
          color mainWhite
          background-color mainBlueLight
          box-shadow 0 0.1875rem 0 0 mainBlueDark
        
    &_red
      background-color mainRedLight
      box-shadow 0 0.1875rem 0 0 mainRedDark 

      &:hover
        transform translateY(0.1875rem)
        box-shadow none

      &:active
        color mainRedLight
        background-color mainWhite
        border solid 0.0625rem mainRedDark
        box-shadow 0 0.1875rem 0 0 mainRedDark

      &-reverse
        color mainRedLight
        background-color mainWhite
        border solid 0.0625rem mainRedDark
        box-shadow 0 0.1875rem 0 0 mainRedDark 

        &:hover
          transform translateY(0.1875rem)
          box-shadow none

        &:active
          color mainWhite
          background-color mainRedLight
          box-shadow 0 0.1875rem 0 0 mainRedDark

  &__ripple-effect, &__ripple-effect_reverse_blue, &__ripple-effect_reverse_red
    position absolute
    width 0.0625rem
    height 0.0625rem
    border-radius 50%
    background mainWhite
    animation ripple-animation 1s
    z-index 1
    pointer-events none

    &_reverse
      &_blue
        background mainBlueLight

      &_red
        background mainRedLight

@keyframes ripple-animation
  from
    transform scale(1)
    opacity 1

  to
    transform scale(200)
    opacity 0