.events
  width 18rem 
  height 13.25rem
  border-radius 0.25rem
  display flex
  background-color mainBlueLight

  &__image[data-eventsImage=city]
    background url("./images/city.jpeg") no-repeat 67% 60% / 180%

  &__image[data-eventsImage=sale]
    background url("./images/sale.jpg") no-repeat 67% 50% / 300%

  &__image[data-eventsImage=square2]
    background url("./images/square2.jpg") no-repeat 75% 60% / 400%

  &__image[data-eventsImage=summer]
    background url("./images/summer.jpg") no-repeat 50% 60% / 400%

  &__image[data-eventsImage=square]
    background url("./images/square.jpg") no-repeat 67% 50% / 400%

  &__image
    width 5.9375rem
    height 13.25rem
    border-radius 0.25rem 0 0 0.25rem
    transition all 0.5s ease
    
    &:hover
      width 7.5rem

  &__content
    width 12.0625rem
    height 13.25rem
    padding-right 0.625rem
    color mainWhite
    display flex
    flex-direction column
    justify-content space-between 
    margin 0 0 0.3125rem 1.375rem
    text-align left 
    font-family 'Lato', sans-serif

    &-date
      display inline-block
      
      &-day
        display inline-block 
        font-size 4.5625rem 
        font-weight 300
        letter-spacing -0.1825rem

      &-month
        display inline-block
        margin-left 0.8125rem
        font-size 1.875rem
        font-weight 300
        text-transform lowercase

        &:first-letter
          text-transform uppercase

    &-title
      font-size 0.8125rem
      font-weight 400
      text-transform uppercase
      letter-spacing 0.0394rem
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-line-clamp 1
      -webkit-box-orient vertical

    &-text
      font-size 0.6875rem
      font-weight 400
      letter-spacing 0.0344rem
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical

    &-button
      width 8rem
      height 1.375rem  
      margin auto auto 1.5625rem auto