.stButton
  font-family Lato, sans-serif
  text-transform uppercase
  font-weight bold
  color mainWhite
  border none 
  border-radius 0.1875rem
  outline none
  cursor pointer

  &_size_small 
    width 4.875rem
    height 1.375rem
    font-size 0.625rem
    letter-spacing 0.0313rem

  &_size_big
    width 7.375rem
    height 2rem 
    font-size 0.75rem
    letter-spacing 0.0375rem

  &_color_blue
    background-color mainBlueLight 

    &:hover
      box-shadow 0 0.1875rem 0 0 mainBlueDark 

    &:active
      background-color mainWhite
      color mainBlueLight
      border solid 0.0625rem mainBlueDark
      box-shadow 0 0.1875rem 0 0 mainBlueDark
      
  &_color_red 
    background-color mainRedLight

    &:hover
      box-shadow 0 0.1875rem 0 0 mainRedDark 

    &:active
      background-color mainWhite
      color mainRedLight
      border solid 0.0625rem mainRedDark
      box-shadow 0 0.1875rem 0 0 mainRedDark



