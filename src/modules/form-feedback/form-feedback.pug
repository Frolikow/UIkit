include ./../input/input
include ./../textarea/textarea

mixin form-feedback
    form.form-feedback.js-form-feedback
        +input({
            type: 'name', 
            placeholder: 'Your name', 
            name: 'formName'
        })
        +input({
            type: 'email', 
            placeholder: 'Your email', 
            name: 'formEmail'
        })

        +textarea({
            placeholder: 'Your message', 
            name: 'formMessage'
        })
        
        .form-feedback__button
            +standard-button({
                size: 'custom', 
                color: 'blue',
                value: 'Submit',
                type: 'submit'
            })
