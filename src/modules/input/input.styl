@import '~style/colors.styl'

.input
  &__element
    &_decor
      outline none
      color mainGray136
      font-size 0.875rem
      font-weight 400
      line-height 2.625rem
      letter-spacing 0.0088rem
      font-family "Source Sans Pro", sans-serif
      border none
      border-radius 0.125rem
      background-color mainGray229
      width 12.375rem
      height 1.75rem
      padding 0
      margin-bottom 0.75rem
      padding-left 0.625rem

    &_type_name:valid + .input__info:after
        content "thanks"
        background-color mainBlueLight

    &_type_email:valid + .input__info:after
        content "thanks"
        background-color mainBlueLight

    &_type_name:valid + .input__info:before
      background-color mainBlueLight

    &_type_email:valid + .input__info:before
      background-color mainBlueLight
  
  &__info
    width 0
    height 0

    &:before
      content ""
      width 0.375rem
      height 0.375rem
      transform rotate(45deg)
      background-color mainRedLight
      position relative
      left 13.375rem
      bottom 2.1875rem
      display inline-block
      border-radius 0.0625rem
      
    &:after
      content "error"
      width 4.5rem
      height 1.75rem
      display inline-block
      position relative
      bottom 3.4375rem
      left 13.5rem
      border-radius 0.125rem
      color mainWhite
      font-family Lato, sans-serif
      font-size 0.625rem
      font-weight bold
      line-height 1.75rem
      text-transform uppercase
      letter-spacing 0.0313rem
      text-align center
      background-color mainRedLight

