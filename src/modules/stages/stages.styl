
.stages
  margin 10px auto
  width 590px
  height 5px
  background-color #e5e5e5
  .stages-select
    background #e75735
    height 5px
  ul
    list-style-type none
    display flex
    justify-content space-between
    padding 0
    li
      color #888888
      font-family Lato
      font-size 14px
      font-weight 400
      line-height 28px
      letter-spacing 0.7px
      width 29px
      height 29px
      border-radius 50%
      background-color #e5e5e5
      position relative
      bottom 35px
    .li-edit
      background-color #e75735
      color #fff

