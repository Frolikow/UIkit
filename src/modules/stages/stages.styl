.stages
  margin 0.625rem auto
  width 37.5rem
  height 0.3125rem
  background-color mainGray229

  &__scale
    background mainRedLight
    height 0.3125rem

  &__list
    list-style-type none
    display flex
    justify-content space-between
    padding 0

    &-item
      color mainGray136
      font-family Lato, sans-serif
      font-size 0.875rem
      font-weight 400
      line-height 1.75rem
      letter-spacing 0.0437rem
      width 1.8125rem
      height 1.8125rem
      border-radius 50%
      background-color mainGray229
      position relative
      bottom 2.1875rem

      &_selected-item
        background-color mainRedLight
        color mainWhite

