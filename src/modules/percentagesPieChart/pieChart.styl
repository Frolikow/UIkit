.pieChart
  position relative
  margin 1.5625rem auto 0 auto
  width 6.25rem
  height 5rem

  &_value
    color mainGray157
    font-family Lato, sans-serif
    font-size 2.5rem
    font-weight 300
    line-height 2.625rem
    letter-spacing -0.125rem
    opacity 1

  &_image
    position relative
    top -4.375rem
    width 6.25rem
    height 6.25rem

    &_svg 
      width 6.25rem
      height 6.25rem

      &_circle1
        fill transparent
        stroke mainBlueLight
        stroke-width 16

      &_circle2
        fill transparent
        stroke mainRedLight
        stroke-width 16

      &_circle3
        fill transparent
        stroke mainGray116
        stroke-width 16

      &_circle4
        fill transparent
        stroke mainGray229
        stroke-width 16


