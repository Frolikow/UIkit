.pieChart
  position relative
  margin 1.5625rem auto 0 auto
  width 6.25rem
  height 5rem

  &_value
    color #9d9d9d
    font-family Lato, sans-serif
    font-size 2.5rem
    font-weight 300
    line-height 2.625rem
    letter-spacing -0.125rem
    opacity 1

  &_image
    position relative
    top -4.375rem
    width 6.25rem
    height 6.25rem

    &_svg 
      width 6.25rem
      height 6.25rem

      &_circle1
        fill transparent
        stroke #4eb7a8
        stroke-width 16

      &_circle2
        fill transparent
        stroke #e75735
        stroke-width 16

      &_circle3
        fill transparent
        stroke #747474
        stroke-width 16

      &_circle4
        fill transparent
        stroke #e5e5e5
        stroke-width 16


