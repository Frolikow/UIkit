include ../title/title
include ../standard-button/standard-button

mixin standard-buttons-container
    //- доступные размеры small/big / custom
    //- доступные цвета blue/red/blue-reverse/red-reverse
    //- текст кнопки value 
    //- type кнопки button/submit 
    .standard-buttons-container
        +title('standard buttons')
        .standard-buttons-container__row.standard-buttons-container__row_first
            each item in [{size: 'small', color: 'blue', value: 'button', type: 'button'}, {size: 'big', color: 'blue', value: 'button', type: 'button'}, {size: 'big', color: 'red', value: 'button', type: 'button'}, {size: 'small', color: 'red', value: 'button', type: 'button'}]
                +standard-button(item)
        .standard-buttons-container__row.standard-buttons-container__row_second
            each item in [{size: 'small', color: 'blue', value: 'button', type: 'button'}, {size: 'big', color: 'blue', value: 'button', type: 'button'}, {size: 'big', color: 'red', value: 'button', type: 'button'}, {size: 'small', color: 'red', value: 'button', type: 'button'}]
                +standard-button(item)
        .standard-buttons-container__row.standard-buttons-container__row_third
            each item in [{size: 'small', color: 'blue-reverse', value: 'button', type: 'button'}, {size: 'big', color: 'blue-reverse', value: 'button', type: 'button'}, {size: 'big', color: 'red-reverse', value: 'button', type: 'button'}, {size: 'small', color: 'red-reverse', value: 'button', type: 'button'}]
                +standard-button(item)