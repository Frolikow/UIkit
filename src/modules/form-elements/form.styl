.form
  width 288px
  height 215px
  text-align left

  
  &_name:valid
    background-color rgba(0,255,0,0.5)
  &_name:invalid
    background-color rgba(255,0,0,0.5)
    &::after
      content ""
      width 100px
      height 100px
      border 1px solid black
      display block
      position relative
      top 50px
      
  &_email:valid
    background-color rgba(0,255,0,0.5)
  &_email:invalid
    background-color rgba(255,0,0,0.5)



  &_egual-style
    color #888888
    font-size 14px
    font-weight 400
    line-height 42px
    letter-spacing 0.14px
    font-family "Source Sans Pro"
    border none
    border-radius 2px
    background-color #e5e5e5
    width 198px
    height 28px
    padding 0
    margin-bottom 10px
    padding-left 10px
  &_textarea
    width 278px
    height 88px
    resize none
  &_submit
    width 118px
    height 32px
    background-color #4eb7a8
    color #fff
    font-family Lato
    font-size 12px
    font-weight 400
    line-height 32px
    text-transform uppercase
    letter-spacing 0.6px
    padding 0
    margin-left 59%
    box-shadow 0 3px 0 #28a290 
