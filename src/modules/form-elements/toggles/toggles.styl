@import '~style/colors.styl'

.toggles  
  &__element
    vertical-align top
    width 3.75rem
    height 1.0625rem

    &:not(checked)  
      position absolute
      opacity 0
    
    &:not(checked) + ^[0]__visible-part  
      position relative
      padding 0 0 0 3.75rem
      color mainWhite
      font-family Lato, sans-serif
      font-size 0.75rem
      font-weight bold
      text-transform uppercase
      letter-spacing 0.0375rem
    
    &:not(checked) + ^[0]__visible-part:before  
      content 'off'
      text-align center
      text-indent 1.25rem
      line-height 1.4375rem
      position absolute
      top -0.25rem
      left 0
      width 3.6875rem
      height 1.5rem
      border-radius 0.75rem
      background mainGray229
      
    &:not(checked) + ^[0]__visible-part:after  
      content ''
      position absolute
      top -0.125rem
      left 0.125rem
      width 1.25rem
      height 1.25rem
      border-radius 0.625rem
      background mainWhite
      transition all .2s
    
    &:checked + ^[0]__visible-part:before  
      background mainBlueLight
      content 'on'
      text-align left
      text-indent 0.6875rem
      line-height 1.4375rem
    
    &:checked + ^[0]__visible-part:after  
      left 2.3125rem

  &__visible-part 
    cursor pointer