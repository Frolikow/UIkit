.checkbox  
  vertical-align top
  margin 0 0.1875rem 0 0
  width 3.75rem
  height 1.0625rem

.checkbox + span  
  cursor pointer
 
.checkbox:not(checked)  
  position absolute
  opacity 0
 
.checkbox:not(checked) + span  
  position relative
  padding 0 0 0 3.75rem
  color #ffffff
  font-family Lato, sans-serif
  font-size 0.75rem
  font-weight bold
  text-transform uppercase
  letter-spacing 0.0375rem
 
.checkbox:not(checked) + span:before  
  content 'off'
  text-align center
  text-indent 1.25rem
  line-height 1.4375rem
  position absolute
  top -0.25rem
  left 0
  width 3.6875rem
  height 1.5rem
  border-radius 0.75rem
  background #e5e5e5
  
.checkbox:not(checked) + span:after  
  content ''
  position absolute
  top -0.125rem
  left 0.125rem
  width 1.25rem
  height 1.25rem
  border-radius 0.625rem
  background #FFF
  transition all .2s
 
.checkbox:checked + span:before  
  background #4eb7a8
  content 'on'
  text-align left
  text-indent 0.6875rem
  line-height 1.4375rem
 
.checkbox:checked + span:after  
  left 2.3125rem