.user-profiles
  min-width 20rem
  position relative
  right 1.875rem
  padding-bottom 6.875rem

  &__user-profile
    display flex
    flex-direction column
    justify-content flex-end
    margin 2rem 1rem 0.8125rem 1.5625rem

  &__title
    height 1.125rem
    color mainGray79
    font-family Lato, sans-serif
    font-size 1.125rem
    font-weight bold
    text-transform uppercase
    letter-spacing 0.075rem
    word-spacing 0.25rem
    text-align center