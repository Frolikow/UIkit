.step-slider 
  position relative
  right 0.4375rem
  text-align left
  width 16.25rem
  height 0.3125rem
  border-radius 0.1875rem
  background-color mainGray229

  .ui-slider-handle 
    outline none
    position absolute
    background-color mainBlueLight
    border-radius 50%
    top -0.4375rem
    margin-left -0.5625rem
    z-index 2
    width 1.25rem
    height 1.25rem

  .ui-slider-range 
    position absolute
    display block
    background-color mainBlueLight
    border 0.1563rem solid mainBlueLight
    border-radius 0.125rem

  &__scale
    width 110%
    position relative
    right 1.25rem
    display flex
    flex-direction row
    justify-content space-between
    color mainGray209
    font-family Lato , sans-serif
    font-size 0.6875rem
    font-weight 400
    line-height 2rem

    &-value
      width 1.5625rem