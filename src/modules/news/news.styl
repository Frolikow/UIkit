@import '~style/colors.styl'

.news
  width 18rem 
  height 13.25rem
  border-radius 0.25rem
  display flex
  background-color mainRedLight

  &__image
    width 110%
    height 13.25rem
    transition all 0.5s ease
    border-radius 0.25rem 0 0 0.25rem

    &:hover
      width 140%

  &__content
    min-width 40%
    height 13.25rem
    padding-right 0.625rem
    color mainWhite
    display flex
    flex-direction column
    justify-content flex-start
    margin 0 0 0 1.375rem
    text-align left
    text-overflow hidden
    font-family Lato-Regular, sans-serif

  &__title
    margin-top 1.5rem
    font-size 1.75rem
    font-weight 100 
    line-height 1.875rem
    max-height 5rem
    overflow hidden
    text-overflow ellipsis
    display -webkit-box
    -webkit-line-clamp 2
    -webkit-box-orient vertical

  &__date, &__text
    font-size 0.6875rem
    line-height 0.6875rem
    font-weight bold
    letter-spacing 0.0344rem

  &__date
    text-transform uppercase
    letter-spacing 0.0688rem
    margin-top 0.8125rem
    max-height 2rem

  &__text
    margin-top 0.875rem
    line-height 13px
    display inline-block
    font-family Lato-Regular, sans-serif
    overflow hidden
    text-overflow ellipsis
    display -webkit-box
    -webkit-line-clamp 5
    -webkit-box-orient vertical