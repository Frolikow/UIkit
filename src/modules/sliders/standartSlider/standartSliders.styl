.standartSlider
  position relative
  width 260px
  height 5px
  background-color #e5e5e5 
  border-radius 3px
  margin 50px auto 20px auto
  display block
  &_custom-handle 
    width 35px
    height 23px 
    border-radius 3px
    background-color #e75735
    color #fff 
    position absolute
    top -40px
    margin-left -17px
    text-align center
    font-family "Lato"
    font-size 13px
    font-weight 400
    letter-spacing 0.65px
    line-height 19px
    &::before
      width 20px
      height 20px 
      border-radius 50%
      content ""
      display block
      background-color inherit
      position absolute
      left 7px
      top 32px
    &::after
      content ""
      display block
      border 5px solid #e75735
      border-radius 2px
      position absolute
      left 12px
      top 17px
      transform rotate(45deg)
