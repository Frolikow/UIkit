.standartSlider
  position relative
  width 16.25rem
  height 0.3125rem
  background-color #e5e5e5 
  border-radius 0.1875rem
  margin 3.125rem auto 1.25rem auto
  display block
  
  &_custom-handle 
    outline none
    width 2.1875rem
    height 1.4375rem 
    border-radius 0.1875rem
    background-color #e75735
    color #fff 
    position absolute
    top -2.5rem
    margin-left -1.0625rem
    text-align center
    font-family Lato, sans-serif
    font-size 0.8125rem
    font-weight 400
    letter-spacing 0.0406rem
    line-height 1.375rem

    &::before
      width 1.25rem
      height 1.25rem 
      border-radius 50%
      content ""
      display block
      background-color inherit
      position absolute
      left 0.4375rem
      top 2rem

    &::after
      content ""
      display block
      border 0.3125rem solid #e75735
      border-radius 0.125rem
      position absolute
      left 0.75rem
      top 1.0625rem
      transform rotate(45deg)
