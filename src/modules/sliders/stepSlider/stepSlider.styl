.step-slider
  
  .ui-slider 
    position relative
    text-align left
    width 16.25rem
    height 0.3125rem
    border-radius 0.1875rem
    background-color #e5e5e5
    margin 1.25rem auto -0.3125rem auto

    .ui-slider-handle 
      outline none
      position absolute
      background-color #4eb7a8
      border-radius 50%
      top -0.4375rem
      margin-left -0.5625rem
      z-index 2
      width 1.25rem
      height 1.25rem

    .ui-slider-range 
      position absolute
      display block
      background-color #4eb7a8
      border 0.1563rem solid #4eb7a8
      border-radius 0.125rem

  .scale
    width 17.5rem
    display flex
    flex-direction row
    justify-content space-between
    margin 0 auto
    color #d1d1d1
    font-family Lato , sans-serif
    font-size 0.6875rem
    font-weight 400
    line-height 2.625rem

    &_value
      width 1.25rem
