.step-slider
  .ui-slider 
    position relative
    text-align left
    width 260px
    height 5px
    border-radius 3px
    background-color #e5e5e5
    margin 20px auto -5px auto
    .ui-slider-handle 
      position absolute
      background-color #4eb7a8
      border-radius 50%
      top -7px
      margin-left -9px
      z-index 2
      width 20px
      height 20px
    .ui-slider-range 
      position absolute
      display block
      background-color #4eb7a8
      border 2.5px solid #4eb7a8
      border-radius 2px
  .scale
    width 280px
    display flex
    flex-direction row
    justify-content space-between
    margin 0 auto
    color #d1d1d1
    font-family Lato 
    font-size 11px
    font-weight 400
    line-height 42px
    &_value
      width 20px
