.stepSlider
  &_Slider
    width 260px
    height 5px
    background-color #e5e5e5
    margin 10px auto 0 auto
    border-radius 3px
  .custom-handle
      width 20px
      height 20px
      background-color #4eb7a8
      border-radius 50%
      top -8px
      border none
  &_values 
    width 260px
    font-weight bold
    font-family Lato
    word-spacing 45px
    color #d1d1d1
    font-size 11px
    font-weight 400
    line-height 22px
    letter-spacing: 0.55px
    margin 0 auto
