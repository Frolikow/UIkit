.search 
  margin auto
  width 17.9375rem
  height 1.75rem
  position relative
  
  input 
    border none

  &_input 
    width 100%
    height 100%
    padding 0.5rem 0.5rem 0.5625rem 0.9375rem
    box-sizing border-box
    border-radius 0.1875rem
    background #e5e5e5
    font 0.875rem "Source Sans Pro", sans-serif
    font-weight 400
    line-height 2.625rem
    letter-spacing 0.0088rem
    color #555
    outline none

    &_notFound
      background-color #e75735
      color white

    &:focus 
      background #eee
      color #333

  &_submit 
    position absolute
    top 0
    right 0
    width 2.0625rem
    height 1.75rem
    border-radius 0 0.1875rem 0.1875rem 0
    cursor pointer
    background-color #e75735
    
  svg 
    position absolute
    top 7%
    left 90.4%
    pointer-events none

.highlight 
  background-color #111111
  color #fff
