.ui-elements
  padding 2.9375rem
  margin 0 auto
  max-width 60rem
  display flex
  flex-direction column

  &__item
    display flex
    flex-direction column
    align-items center
    width 100%
    text-align center

  &__title
    height 1.125rem
    color mainGray79
    font-family Lato, sans-serif
    font-size 1.125rem
    font-weight bold
    text-transform uppercase
    letter-spacing 0.075rem
    word-spacing 0.25rem
    text-align center

  &__element
    margin 0 auto
    display flex
    justify-content space-around
    align-items center
    flex-wrap wrap

  &__search-drop-down-user-profile
    display flex
    align-items flex-start
    justify-content space-around
    width 80%
    position relative
    top 2.9375rem

  
  &__calendar-messaging
    width 65%
    display flex
    align-items flex-start
    justify-content space-around
    padding-bottom 2.25rem
