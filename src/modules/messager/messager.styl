.messager
  width 290px
  height 630px
  background-color  #f2f2f2
  border-radius 4px
  position relative
  &__header
    width 100%
    height 81px
    background-color #4eb7a8
    border-radius 4px 4px 0 0
    box-shadow 0 34px   #46ab9d
    &__name
      height 81px
      text-transform capitalize
      color #ffffff
      font-family Lato
      font-size 34px
      font-weight 100
      line-height 81px 
      letter-spacing -1.02px
  &__photo
    border-radius 50%
    background-color #fff
    margin 0 auto 0 auto
    width 84px
    height 84px
    position relative
    bottom 11px
    border 5px solid #e5e5e5
    .userProfile
      position relative
      right 5px
      bottom 5px
      border none

  &__chat
    margin-left auto
    margin-right auto
    width 90%
    max-height 270px
    overflow-y auto
    margin-bottom 30px

    &::-webkit-scrollbar
      width 0
    &__message
      width 60%
      border-radius 5px
      background-color #ffffff
      padding 15px 
      text-align left
      color #868686
      font-family Lato
      font-size 13px
      font-weight 700
      letter-spacing 0.63px
      margin-bottom 15px
      &__in
        position relative
        margin-left 3%
        &:after
          content ""
          display block
          width 10px
          height 10px
          background-color #fff
          transform rotate(45deg)
          position absolute
          left -4px
          top 45%
          border-radius 2px
      &__out
        position relative
        margin-left 22% 
        &:after
          content ""
          display block
          width 10px
          height 10px
          background-color #fff
          transform rotate(45deg)
          position absolute
          right -4px
          top 45%
          border-radius 2px
      &:first-child
        box-shadow  inset 0 15px 10px -10px #f2f2f2
      &:last-child
        box-shadow inset 0 -15px 10px -10px #f2f2f2
  &__input
    &__test
      width 207px
      height 50px
      position absolute 
      bottom 79px
      left 22px
      border 3px solid #ffffff
      background-color #e5e5e5
      color #777777
      font-family Lato
      font-size 13px
      font-weight 700
      letter-spacing 0.63px
      outline none
      padding 16px
      border-radius 7px
  .messager__input__btn
    display block
    position absolute
    bottom 29px
    left 22px
    input.stButton
      font-size 12px
      &_size_big
        width 243px
        height 32px 
