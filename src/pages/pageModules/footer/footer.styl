.footer 
  display flex
  width 100%
  height 8.125rem
  font-family Lato, sans-serif
  margin-top 1.25rem

  .image 
    width 100%
    height 100%
    background-color #444444

    .logo
      font-size 1.25rem
      color green 
      text-transform uppercase
      float left
      margin 3.4375rem

    .menu
      ul
        position absolute
        right 3.125rem
        margin 0

        li
          list-style none
          margin 0.3125rem

          a
            text-decoration none 
            color white
            text-transform uppercase
            font-size 1rem
            
            &:hover
              text-decoration underline 
