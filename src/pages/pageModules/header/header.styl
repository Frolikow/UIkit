
.header
  width 100%
  height 300px
  font-family Lato, sans-serif
  .image
    width 100%
    height 100%
    display flex
    flex-direction column-reverse
    background linear-gradient(90deg, #EECFBA, #C5DDE8);
    .logo
      display block
      position absolute
      top 0
      font-size: 20px
      color green 
      text-transform: uppercase
      float left
      margin 55px
    .menu
      border 1px solid #aaa
      border-width: 1px 0 1px 0
      width 100%
      display flex
      justify-content: center
      background linear-gradient(270deg, #EECFBA, #C5DDE8);
      margin-bottom 15px
      .buttonBlock
        max-width 650px
        flex-wrap wrap
        display flex
        padding 10px
        justify-content: space-around
        input 
          margin 5px
