.header
  width 100%
  height 12.5rem
  font-family Lato, sans-serif

  .image
    width 100%
    height 100%
    display flex
    flex-direction column-reverse
    background linear-gradient(90deg, #EECFBA, #C5DDE8)

    .logo
      display block
      position absolute
      top 0
      font-size 1.25rem
      color green 
      text-transform uppercase
      float left
      margin 3.4375rem

    .menu
      border 0.0625rem solid #aaa
      border-width 0.0625rem 0 0.0625rem 0
      width 100%
      display flex
      justify-content center
      background linear-gradient(270deg, #EECFBA, #C5DDE8)
      margin-bottom 0.9375rem

      .buttonBlock
        max-width 40.625rem
        flex-wrap wrap
        display flex
        padding 0.625rem
        justify-content space-around

        input 
          margin 0.3125rem
