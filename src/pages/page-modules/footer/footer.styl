.footer 
  display flex
  width 100%
  height 8.125rem
  font-family Lato, sans-serif
  margin-top 1.25rem
  &__image 
    width 100%
    height 100%
    background-color mainGray68
    &-logo
      font-size 1.25rem
      color mainGreen 
      text-transform uppercase
      float left
      margin 3.4375rem
  &__menu
    .footer__list
      position absolute
      right 3.125rem
      margin 0
      &-item
        list-style none
        margin 0.3125rem
        &-link
          text-decoration none 
          color mainWhite
          text-transform uppercase
          font-size 1rem
          &:hover
            text-decoration underline 
