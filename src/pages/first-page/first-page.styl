.first-page-content
  &__about-us 
    display flex
    flex-direction column
    margin auto
    min-height 3.125rem
    max-width 50rem
    padding 0.9375rem
    font-size 1.375rem
    text-align center
    font-family Lato, sans-serif

  &__news-and-events
    display flex
    justify-content center
    flex-direction row
    flex-wrap wrap
    text-align center
    font-size 1.875rem
    color mainGray102
    font-family Lato, sans-serif

  &__title
    text-align center
    font-size 1.875rem

  &__news-block
    min-height 3.125rem
    display flex
    flex-direction column
    padding 1.875rem

    & > :nth-child(n)
      margin 0.3125rem


  &__events-block
    min-height 3.125rem
    display flex
    flex-direction column
    padding 1.875rem
    font-size 1rem

    & > :nth-child(n)
      margin 0.3125rem