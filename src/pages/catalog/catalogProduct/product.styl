.productsBlock
  display flex
  flex-wrap wrap
  justify-content center
  
  .product
    width 18.75rem
    height 25rem
    margin 0.3125rem
    background-color #ddd

    &_image
      outline 0.0625rem solid #999
      outline-offset -0.0625rem
      width 100%
      height 66%
      display flex
      align-items center

      a
        width 100%

        img 
          width 100%
          transition all 0.5s ease

          &:hover
            transform scale(1.2)

    &_name 
      font-size 1.625rem

    &_price  
      font-size 1.625rem

    &_info
      margin-top 0.3125rem
      margin-left 10.625rem

    &_name, &_price
      margin-left 0.9375rem
      margin-top 0.9375rem
    