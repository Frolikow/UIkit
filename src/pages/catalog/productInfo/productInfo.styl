

.fullProduct
  color black
  max-width 1000px
  max-height 1200px
  margin auto
  display flex
  justify-content center
  flex-wrap wrap
  font-size 20px
  background-color #eee
  
  &_media 
    max-width 600px
    max-height 600px
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    align-content center
    img 
      margin 5px
      width 45%
      display flex
      flex-wrap wrap
      transition: all 0.5s ease;
      &:hover
        transform: scale(2);
  &_info
    width 400px
    height 500px
    display flex
    justify-content center
    align-items center
    flex-direction: column
    background-color #ccc
    &_title 
      width 300px
      height 45px
      display block
      font-size 30px
      padding-top 10px
    &_description 
      text-align: left
      padding-left 15px
      width 285px
      height 300px
      display block
    &_buy
      padding-top 15px
      width 200px
      height 100px
      display block
      input 
        margin-top 5px
    