.buyItem
  max-width 800px
  min-height 650px
  display flex
  justify-content center
  margin auto
  padding-bottom 50px
  flex-wrap: wrap
  &_form
    width 500px
    height 100%
    display flex
    flex-direction column
    align-items: center
    &_currentCar
      display block
      width 200px
      text-align left
      padding 10px
      line-height: 25px
    &_settings
      display flex
      flex-direction column
      label 
        text-align left
        margin-bottom 5px
      .pointerDropDown
        margin 0
        margin-bottom 10px
  form
    width 100%
    display flex
    flex-direction row
    justify-content: flex-start
    align-items: center
    label 
      .block_tickboxes
        margin-bottom 70px
        label:nth-child(2n)
          line-height: 28px
          vertical-align: top
          &:after
            display block
            content ""
    .userContactData
      display flex
      flex-direction: column
    .buyItem_calendarAndEnd_button
      position absolute
      left 408px
      top 50px
      input 
        width 200px 
        height 50px

  &_calendarAndEnd
    margin-top 60px
    width 300px
    height 100%
    display flex
    flex-direction column
    align-items center
    justify-content: space-between
