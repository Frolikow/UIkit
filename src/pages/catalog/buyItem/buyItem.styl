.buyItem
  max-width 50rem
  min-height 40.625rem
  display flex
  justify-content center
  margin auto
  padding-bottom 3.125rem
  flex-wrap wrap
  
  &_form
    width 31.25rem
    height 100%
    display flex
    flex-direction column
    align-items center

    &_currentCar
      display block
      width 12.5rem
      text-align left
      padding 0.625rem
      line-height: 1.5625rem

    &_settings
      display flex
      flex-direction column

      label 
        text-align left
        margin-bottom 0.3125rem

      .pointerDropDown
        margin 0
        margin-bottom 0.625rem

  form
    width 100%
    display flex
    flex-direction row
    justify-content flex-start
    align-items center

    label 

      .block_tickboxes
        margin-bottom 4.375rem
        label:nth-child(2n)
          line-height 1.75rem
          vertical-align top

          &:after
            display block
            content ""

    .userContactData
      display flex
      flex-direction column

    .buyItem_calendarAndEnd_button
      position absolute
      left 25.5rem
      top 3.125rem

      input 
        width 12.5rem 
        height 3.125rem

  &_calendarAndEnd
    margin-top 3.75rem
    width 18.75rem
    height 100%
    display flex
    flex-direction column
    align-items center
    justify-content space-between
