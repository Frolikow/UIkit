.product
  width 18.75rem
  height 25rem
  margin 0.3125rem
  background-color mainGray221
  
  &__image
    outline 0.0625rem solid mainGray157
    outline-offset -0.0625rem
    width 100%
    height 66%
    display flex
    align-items center

    &-link
      width 100%

      &-picture 
        width 100%
        transition all 0.5s ease

        &:hover
          transform scale(1.2)

  &__name 
    font-size 1.625rem

  &__price  
    font-size 1.625rem

  &__info
    margin-top 0.3125rem
    margin-left 10.625rem

  &__name, &__price
    margin-left 0.9375rem
    margin-top 0.9375rem
  