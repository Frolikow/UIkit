.order-page-content
  max-width 50rem
  min-height 40.625rem
  display flex
  justify-content center
  margin auto
  padding-bottom 3.125rem
  flex-wrap wrap

  .order-settings
    &_column_left
      width 31.25rem
      height 100%
      display flex
      flex-direction column
      align-items center

    &__current-car
        display block
        width 100%
        text-align center
        padding 0.625rem
        line-height: 1.5625rem

    &__options
        display flex
        flex-direction column

        &-transmission, &-territory-of-use, &-place-of-renting, &-lease-time
          margin 0
          margin-bottom 0.925rem

        &-label
            text-align left
            line-height 1.25rem

        &-lease-time
          display flex
          flex-direction column
          height 5.3125rem
          justify-content space-between

        &-additions
          width 100%
          display flex
          flex-direction column
          justify-content flex-start
          align-items left

          &-item
            margin-top 0.3125rem
            margin-bottom 0.375rem
            display flex
            flex-direction column

            &:after
              display block
              content ""

        &-contact-form
          padding-top 0.625rem
          padding-bottom 0.625rem
          
          &-title
            line-height 1.875rem

    &_column_right
      margin-top 5.375rem
      width 18.75rem
      height 100%
      display flex
      flex-direction column
      align-items center
      justify-content space-between

    &__button-send-request
      margin-top 3.0625rem
      width 12.5rem 
      height 3.125rem 
      font-size 1.5rem
