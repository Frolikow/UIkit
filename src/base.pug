include ./modules/standartButtons/standartButtonsMixin
include ./modules/arrowButtons/arrowButtonsMixin
include ./modules/percentagesPieChart/percentagesMixin
include ./modules/percentagesPieChart/pieChartMixin
include ./modules/sliders/slidersMixin
include ./modules/stages/stagesMixin
include ./modules/formElements/form/formMixin
include ./modules/formElements/toggles/togglesMixin
include ./modules/formElements/tickBoxes/tickBoxesMixin
include ./modules/search.dropDown/dropDown/dropDownMixin
include ./modules/search.dropDown/search/searchMixin
include ./modules/userProfile/userProfileMixin
include ./modules/news&events/news/newsMixin.pug
include ./modules/news&events/events/eventsMixin.pug



doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title "UIKit"  
  body

    .block
      .H1 standart buttons
      //- small/big and blue/red
      +stButton('small', 'blue')
      +stButton('big', 'blue') 
      +stButton('big', 'red')
      +stButton('small', 'red') 

    .block
      .H1 arrow buttons
      //- left/right
      +arButton('left')
      +arButton('right')

    .block  
      .H1 percentages / pie chart
      .block
        .H1 percentages
        //- 0..100
        +percentages('75')

      .block
        .H1 pie chart
        //- (value1, value2, value3)
        +pieChart(50, 25, 10)
  
    .block
      .H1 sliders
      .block 
        .H1 standart slider
        +standartSlider
      .block
        .H1 step slider
        +stepSlider

    .block
      .H1 stages
        //- length, value
        +stages(11, 5) 

    .block
      .H1 form elements
      form.form
        +form

      .block
        .H1 toggles
        form
          +toggles
          +toggles
          +toggles

      .block
        .H1 tick boxes
        form
          +tickBox
          +tickBox
          +tickBox

    .block
      .H1 search / drop down
      .block
        .H1 search
        +search

      .block
        .H1 drop down
        +dropDown

    .block
      .H1 user profile 
      //- 1)название картинки из папки image модуля 
      //- 2) имя и фамилия 
      //- 3) ux designer или developer
      +userProfile('griffin', 'John Smith', 'ux designer')
      +userProfile('wolf', 'Sarah Brown', 'developer')

    .block
      .H1 news & events
      +news
      +events



    .block
    .block